<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            style="@style/TitleStyle"
            android:text="@string/the_official" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="159dp"
            android:src="@drawable/doggonolingo_800" />

        <TextView
            style="@style/TitleStyle"
            android:text="@string/quiz" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            android:background="#e9e9e9">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/finaldoge" />

            <TextView
                android:id="@+id/subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/intro"
                android:textSize="14sp"
                android:layout_margin="16dp"
                android:layout_gravity="center"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="48dp"
            android:gravity="center"
            android:src="@drawable/arrow" />

        <ImageView
            style="@style/ImageStyle"
            android:src="@drawable/q_one_doggo"/>

        <TextView
            android:id="@+id/q_one"
            style="@style/questionStyle"
            android:text="Our fren is enjoying:" />

        <RadioGroup
            style="@style/radioStyle">

            <RadioButton
                android:id="@+id/q_one_one"
                style="@style/wrapW_wrapH"
                android:text="A heckin good mlem" />

            <RadioButton
                style="@style/wrapW_wrapH"
                android:text="A heart warming story" />

            <RadioButton
                style="@style/wrapW_wrapH"
                android:text="Neither of these" />
        </RadioGroup>

        <View style="@style/Divider"/>

        <ImageView
            style="@style/ImageStyle"
            android:src="@drawable/doggo2" />

        <TextView
            android:id="@+id/q_two"
            style="@style/questionStyle"
            android:text="This doggo is a:" />

        <CheckBox
            android:id="@+id/q_two_one"
            style="@style/checkboxStyle"
            android:text="Stylin and profilin longboi" />

        <CheckBox
            android:id="@+id/q_two_two"
            style="@style/checkboxStyle"
            android:text="Doe eyed gooboi" />

        <CheckBox
            android:id="@+id/q_two_three"
            style="@style/checkboxStyle"
            android:text="Pupper ready for supper" />

        <View style="@style/Divider" />

        <ImageView
            style="@style/ImageStyle"
            android:src="@drawable/doggo3" />

        <TextView
            android:id="@+id/q_three"
            style="@style/questionStyle"
            android:text="STOP! This [woof/floof] needs to see some doggolingo ID." />

        <EditText
            android:id="@+id/q_three_floof"
            style="@style/wrapW_wrapH"
            android:layout_marginBottom="16dp"
            android:hint="Woof or floof?"
            android:inputType="textCapWords" />

        <View style="@style/Divider" />

        <ImageView
            style="@style/ImageStyle"
            android:src="@drawable/doggo4" />

        <TextView
            android:id="@+id/q_four"
            style="@style/questionStyle"
            android:text="UHOH..." />

        <RadioGroup
            style="@style/radioStyle">

            <RadioButton
                style="@style/wrapW_wrapH"
                android:text="Trashboi is at it again!" />

            <RadioButton
                style="@style/wrapW_wrapH"
                android:text="Someone did him a frighten." />

            <RadioButton
                style="@style/wrapW_wrapH"
                android:text="This woofer ran out of borks to give." />
        </RadioGroup>

        <View style="@style/Divider" />

        <ImageView
            style="@style/ImageStyle"
            android:src="@drawable/doggo5" />

        <TextView
            android:id="@+id/q_five"
            style="@style/questionStyle"
            android:text="1 smol pupper + 1 woofer = ?" />

        <CheckBox
            android:id="@+id/q_five_one"
            style="@style/checkboxStyle"
            android:text="A woofer and a subwoofer"/>

        <CheckBox
            android:id="@+id/q_five_two"
            style="@style/checkboxStyle"
            android:text="A heckin good team"/>

        <CheckBox
            android:id="@+id/q_five_three"
            style="@style/checkboxStyle"
            android:text="Borktastic cloidbois"/>

        <Button
            style="@style/buttonStyle"
            android:onClick="submitQuiz"
            android:text="submit quiz"/>

    </LinearLayout>

</ScrollView>