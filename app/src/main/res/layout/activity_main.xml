<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            style="@style/TitleStyle"
            android:text="@string/the_official" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="159dp"
            android:src="@drawable/doggonolingo_800" />

        <TextView
            style="@style/TitleStyle"
            android:text="@string/quiz" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            android:background="#e9e9e9">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/finaldoge" />

            <TextView
                android:id="@+id/subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/intro"
                android:textSize="14sp"
                android:layout_margin="16dp"
                android:layout_gravity="center"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="48dp"
            android:gravity="center"
            android:src="@drawable/arrow" />

        <ImageView
            style="@style/ImageStyle"
            android:src="@drawable/q_one_doggo"/>

        <TextView
            android:id="@+id/q_one"
            style="@style/questionStyle"
            android:text="Our fren is enjoying:" />

        <RadioGroup
            style="@style/radioStyle">

            <RadioButton
                android:id="@+id/q_one_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A heckin good mlem" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A heart warming story" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Neither of these" />
        </RadioGroup>

        <View style="@style/Divider"/>

        <ImageView
            style="@style/ImageStyle"
            android:src="@drawable/doggo2" />

        <Button
            style="@style/buttonStyle"
            android:onClick="showGrade"/>

    </LinearLayout>

</ScrollView>